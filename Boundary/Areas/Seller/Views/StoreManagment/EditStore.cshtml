    <script>

        var madule = angular.module('ShopApp', [])

        madule.controller('EditShopController', ['$scope', function ($scope) {
            $scope.Data = [];
            $("#status").html('لطفا کمی صبر کنید ');


            $scope.Data = @Html.Raw(Json.Encode(Model));
