@model IEnumerable<DataModel.Entities.RelatedToProduct.Category>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
    <body>
        <h2>
            @Html.ActionLink("بازگشت به پنل مدیریت", "Index", "Panel")
        </h2>
        <p>
            @Html.ActionLink("Show First Level Category", "Index", new { level = 1 })
        </p>
        <p>
            @Html.ActionLink("Show Second Level Category", "Index", new { level = 2 })
        </p>
        <p>
            @Html.ActionLink("Show Third Level Category", "Index", new { level = 3 })
        </p>
        <p>
            @Html.ActionLink("Create New Category", "Create", new { level = 1 })
        </p>
        <table class="table" border="1">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BaseCategoryCode)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BaseCategoryCode)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id, level = Convert.ToInt32(ViewBag.level) }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id, level = Convert.ToInt32(ViewBag.level) }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id, level = Convert.ToInt32(ViewBag.level) })
                    </td>
                </tr>
            }

        </table>
    </body>
</html>
