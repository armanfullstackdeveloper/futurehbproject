@using DataModel.Entities.RelatedToProduct
@model DataModel.Entities.RelatedToProduct.Attribute

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Edit</title>
    </head>
    <body>
        @using (Html.BeginForm("PostEdit", "AttributeManagement",FormMethod.Post))
        {
            @Html.AntiForgeryToken()
        
            <div class="form-horizontal">
                <h4>Attribute</h4>
                <hr />
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.Id)
    
                <div class="form-group">
                    @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Name)
                        @Html.ValidationMessageFor(model => model.Name)
                    </div>
                </div>
                
                <div class="form-group">
                    @Html.LabelFor(model => model.CategoryCode, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.CategoryCode)
                        @Html.ValidationMessageFor(model => model.CategoryCode)
                    </div>
                </div>
    
                <div class="form-group">
                    @Html.LabelFor(model => model.AttributeTypeCode, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.AttributeTypeCode, new SelectList((List<AttributeType>)ViewBag.AttributeType,"Id","Name",Model.AttributeTypeCode))
                    </div>
                </div>
            
    
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
    
        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
    </body>
</html>

